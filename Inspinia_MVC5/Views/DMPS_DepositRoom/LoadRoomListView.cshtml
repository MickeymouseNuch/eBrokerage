<div class="wrapper wrapper-content" style="padding-top:0px">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title" style="padding-top:10px">
                    <h4>บริษัท แกรนด์ ยูนิตี้ ดิเวลล็อปเม้นท์ จำกัด</h4>
                    <h5>รายงานสรุปยอดเงินทดรองจ่ายคงค้างบริษัทฯ ณ วันที่ 31/12/2017 <label id="HDate"></label></h5>

                    <div class="ibox-tools">
                        <input type="button" id="btnReceiveCheque" class="btn btn-info" value="บันทึกการรับเงิน" />
                        @*<a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user"></ul>*@
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example" style="width:1500px">
                        <thead>
                            <tr>
                                <th hidden="hidden">วันที่</th>
                                <th style="width:60px"></th>
                                <th></th>
                                <th>วันที่เอกสาร</th>
                                <th>เลขที่เอกสาร</th>
                                <th>ชื่อผู้เบิกเงิน</th>
                                <th>โครงการ</th>
                                <th>จำนวนเงิน</th>
                                <th>PV.No.</th>
                                <th>วันที่ Clear Adv.</th>
                                <th>JV.No.</th>
                                <th>Status</th>
                                <th>จำนวนเงินใช้ไป</th>
                                <th>เงินคืนบริษัท/เบิกเพิ่มเติม</th>
                                <th>Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Inspinia_MVC5.Models.CashAdvance.vw_AdvancePaymentList item in ViewBag.LstCashAdvance)
                            {
                                <tr class="IsRows" data-id="@item.AdvancePaymentID" data-no="@item.AdvancePaymentNO">
                                    <td hidden="hidden">@item.StampDate.GetValueOrDefault().ToString("yyyyMMddHHmm")</td>
                                    <td class="text-center" style="width:60px">
                                        <button data-id="@item.AdvancePaymentID" class="confirm-View btnVED btn-primary" type="button"><i class="fa fa-search"></i></button>
                                        <button data-id="@item.AdvancePaymentID" class="confirm-Print btnVED btn-warning" type="button"><i class="fa fa fa-print"></i></button>
                                    </td>
                                    @if (item.DocumentStatusID == 2)
                                    {
                                        <td style="text-align:center;"><input type="checkbox" id="ChkReceiveCash" class="ChkReceiveCash" data-adv-id="@item.AdvancePaymentID" /></td>
                                    }
                                    else
                                    {
                                        <td style="text-align:center;"></td>
                                    }
                                    <td>@item.DocumentDate.GetValueOrDefault().ToString("dd/MM/yyyy")</td>
                                    <td>@item.AdvancePaymentNO</td>
                                    <td>@item.DisplayName</td>
                                    <td>@item.ProjectID</td>
                                    <td>@item.AdvancePaymentAmt.ToString("#,##0.00")</td>
                                    <td>@item.PVNo</td>
                                    @*@if (item.RefundDate.GetValueOrDefault().ToString("dd/MM/yyyy") != "01/01/0001")*@
                                    @if (item.RefundDate != null)
                                    {
                                        <td>@item.RefundDate.GetValueOrDefault().ToString("dd/MM/yyyy")</td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }

                                    <td>@item.JVNo</td>
                                    @if (item.IsDelete == true)
                                    {
                                        <td style="color:red">Cancel</td>
                                    }
                                    else if (item.DocumentStatusID == 0)
                                    {
                                        <td style="color:dodgerblue">Draft</td>
                                    }
                                    else if (item.DocumentStatusID == 1)
                                    {
                                        <td style="color:dodgerblue">Open</td>
                                    }
                                    else if (item.DocumentStatusID == 2)
                                    {
                                        <td style="color:dodgerblue">กรุณามารับเงิน</td>
                                    }
                                    else if (item.DocumentStatusID == 3)
                                    {
                                        <td style="color:dodgerblue">รับเงินแล้ว</td>
                                    }
                                    else if (item.DocumentStatusID == 4)
                                    {
                                        <td style="color:dodgerblue">รออนุมัติการเคลียร์เงิน</td>
                                    }
                                    else if (item.DocumentStatusID == 5)
                                    {
                                        <td style="color:dodgerblue">อนุมัติจบ</td>
                                    }
                                    else
                                    {
                                        <td style="color:dodgerblue"></td>
                                    }
                                    <td>@item.RefundAmt.ToString().ToDecimal().ToString("#,##0.00")</td>
                                    <td>@item.OtheAmt.GetValueOrDefault().ToString("#,##0.00")</td>
                                    <td>@item.Balance.ToString().ToDecimal().ToString("#,##0.00")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th style="width:60px"></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>






</div>


